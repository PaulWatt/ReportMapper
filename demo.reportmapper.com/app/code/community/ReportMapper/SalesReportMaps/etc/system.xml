<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <reportmapper translate="label" module="reportmapper_salesreportmaps">
            <label>ReportMapper</label>
            <sort_order>100</sort_order>
        </reportmapper>
    </tabs>
	<sections>
        <user_data translate="label">
            <label>Access Key</label>
            <tab>reportmapper</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <authorisation translate="label">
                    <label>Authorisation</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                    <fields>
	                    <version translate="label">
		            		<label>SalesReportMaps Version</label>
		                    <frontend_type>select</frontend_type>
		                    <frontend_model>ReportMapper_SalesReportMaps_Block_Adminhtml_Version</frontend_model>
		                    <sort_order>1</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
	        			</version>
                        <access_key>
                            <label>Access Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>e.g. 'MAGxxxx-Rxxxx-Mxxxx-UKxxxx-SRM'</comment>                   
                        </access_key>
                    </fields>
                </authorisation>
            </groups>                
        </user_data>
    </sections>
</config>
